<Window x:Class="OddorEven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OddorEven"
        mc:Ignorable="d"
        Title="Even or odd numbers" Height="455" Width="285" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Background="{x:Null}">
    <Grid Visibility="Visible">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="White"/>
            </LinearGradientBrush>
        </Grid.Background>
        
        <Button x:Name="BtnIngreso" Content="Check out!" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Click="BtnIngreso_Click" Width="96" FontWeight="Normal" Height="35" FontSize="14"/>
        <TextBox x:Name="numero" HorizontalAlignment="Center" Margin="0,102,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="numero_TextChanged" Height="23" MaxLength="17"/>
        <Label x:Name="label1" Content="Type a number" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" FontSize="17" FontWeight="Bold" Height="34"/>

    </Grid>
</Window>
